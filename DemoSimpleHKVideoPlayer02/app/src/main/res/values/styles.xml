<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <style name="CheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_dark</item>
    </style>
    <style name="textViewStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">17.0sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/blue</item>
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="CheckBoxStyle.Login" parent="@style/CheckBoxStyle">
        <item name="android:layout_width">@dimen/check_width</item>
        <item name="android:layout_height">@dimen/check_height</item>
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="ButtonStyleAdd">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_add_selector</item>
        <item name="android:layout_marginLeft">20.0dip</item>
        <item name="android:layout_marginRight">20.0dip</item>
    </style>
    <style name="ButtonStyleAdd1">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_add_selector</item>
    </style>
    <style name="MyDialogStyleTop" parent="android:Theme.Dialog" >
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->        
     </style>
     
    <style name="listviewStyle">
        <item name="android:fadingEdge">none</item>
        <item name="android:layout_marginTop">@dimen/marginleft</item>
        <item name="android:layout_marginBottom">@dimen/marginright</item>
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@drawable/listview_divider</item>
        <item name="android:dividerHeight">@dimen/dividerHeight</item>
    </style>

    <style name="GridViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:horizontalSpacing">15.0dip</item>
        <item name="android:verticalSpacing">8.0dip</item>
    </style>
    
    <style name="TextViewStyleGridItem" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/grid_item_text_size</item>
        <item name="android:singleLine">true</item>
    </style>
     
    <style name="main_tab_bottom">
        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>  
        <item name="android:background">@drawable/home_btn_bg</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>  
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
	<RelativeLayout
        android:id="@+id/working_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bar" >

        <Button
            android:id="@+id/working_top_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/top_return_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/work_report_list"
            android:textColor="@color/working_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        <Button
            android:id="@+id/add_work_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:text="@string/new_btn"
            android:textColor="@color/white"
            android:background="@drawable/bar_button" />
    </RelativeLayout>
    
    <com.component.view.XListView
        android:id="@+id/work_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/pb_center_color"
        android:dividerHeight="1px"
        android:footerDividersEnabled="true"
        android:listSelector="@color/pb_start_color" />

</LinearLayout>

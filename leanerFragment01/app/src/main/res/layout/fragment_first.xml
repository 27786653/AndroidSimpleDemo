<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示第二个fragment"
        android:id="@+id/changefragment"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是第一个fragment"
        android:id="@+id/tv_first"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/changefragment"
        android:layout_alignStart="@+id/changefragment"
        android:layout_alignRight="@+id/changefragment"
        android:layout_alignEnd="@+id/changefragment" />
</RelativeLayout>